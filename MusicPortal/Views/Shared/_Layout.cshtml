<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MusicPortal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MusicPortal.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="p-3 text-bg-dark">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                    <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">

                    <li> <a class="nav-link px-2 text-white" asp-area="" asp-controller="Home" asp-action="Index">MusicPortal</a></li>
                    @if (Context.Session.GetString("Username") != null)
                    {
                        <li><a class="nav-link px-2 text-white" asp-area="" asp-controller="Genre" asp-action="Genres">Genres</a></li>
                        <li><a class="nav-link px-2 text-white" asp-area="" asp-controller="Artist" asp-action="Artists">Artists</a></li>
                        <li><a class="nav-link px-2 text-white" asp-area="" asp-controller="Song" asp-action="Songs">Songs</a></li>
                    }
                    @if (Context.Session.GetInt32("Level") == 2)
                    {
                        <li><a class="nav-link px-2 text-white" asp-area="" asp-controller="Home" asp-action="Users">Users</a></li>
                    }
                </ul>


                <div class="text-end">
                     @if (Context.Session.GetString("Username") == null)
                {
                    <a type="button" asp-controller="Account" asp-action="Login" class="btn btn-light me-2">Login</a>
                    <a type="button" asp-controller="Account" asp-action="Register" class="btn btn-warning">Sign-up</a>
                }
                else
                {
                        <span class="navbar-brand text-white">Hello, @Context.Session.GetString("Username") </span> <!-- Updated text -->
                        <a type="button" asp-controller="Home" asp-action="Logout" class="btn btn-warning">Logout</a>
                }
                </div>
            </div>
        </div>
    </header>
  
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MusicPortal - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
